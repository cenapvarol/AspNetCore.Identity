@model UserCreateModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<form asp-action="Create" method="post" class="p-4 w-75 mx-auto shadow">
    <div class="mb-3">
        <label>Kullanıcı Adı</label>
        <span class="text-danger" asp-validation-for="@Model.UserName"></span>
        <input asp-for="@Model.UserName" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Mail Adresi</label>
        <span class="text-danger" asp-validation-for="@Model.Email"></span>
        <input asp-for="@Model.Email" type="email" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifre</label>
        <span class="text-danger" asp-validation-for="@Model.Password"></span>
        <input asp-for="@Model.Password" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Şifreiyi Tekrar</label>
        <span class="text-danger" asp-validation-for="@Model.ConfirmPassword"></span>
        <input asp-for="@Model.ConfirmPassword" type="password" class="form-control" />
    </div>
    <div class="mb-3">
        <label>Cinsiyet</label>
        <span class="text-danger" asp-validation-for="@Model.Gender"></span>
        <input asp-for="@Model.Gender" type="text" class="form-control" />
    </div>
    <div class="mb-3">
        <button type="submit" class="btn btn-primary">Kaydet</button>
    </div>
    <div class="text-danger mt-2" asp-validation-summary="ModelOnly"></div>
</form>
