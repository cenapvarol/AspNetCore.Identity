@model List<AppUser>
@{
    Layout = "_Layout";
}
<a asp-action="Create" asp-controller="User" class="d-inline-block my-2" >Yeni kullanıcı oluştur</a>
<table class="table table-hovered table-bordered table-sm">
    <thead>
        <tr>
            <th>UserName</th>
            <th>Gender</th>
            <th>Email</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.UserName</td>
                <td>@item.Gender</td>
                <td>@item.Email</td>
                <td><getUserInfo user-id="@item.Id"></getUserInfo></td>
                <td>
                    <a  asp-action="AssignRole" asp-route-id="@item.Id">Assign Role</a>
                </td>
            </tr>
        }
    </tbody>
</table>
